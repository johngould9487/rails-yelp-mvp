<div class="container">
  <h1>Restaurants</h1>
  <div class="restaurants">
    <% @restaurants.each do |restaurant| %>
      <div class="restaurant">
        <h3>
          <%= link_to restaurant.name, restaurant_path(restaurant.id) %>
        </h3>
      </div>
    <% end %>
  </div>
  <%= link_to 'Add new restaurant', new_restaurant_path, class: "btn btn-primary"%>
</div>
